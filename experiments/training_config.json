
{
    "Dataset": {
	"corpus": "corlec",
        "path": "../data/corlec/corlec-nopunct-explode.csv",
        "language": "ES",
        "column_option": {
            "text_col": "text",
            "file_col": "file",
            "index_col": "index",
            "speaker_col": "speaker",
            "group_columns": ["file"]
        },
        "TrainTest": {
            "file_column": ["file"]
        }
    },
    "DataLoader": {
        "context_max_length": 150,
        "separator": "eos"
    },
    "Trainer": {
        "num_train_epochs": 2,
        "learning_rate": 1e-5,
        "warmup_steps": 100,
        "per_device_train_batch_size": 16,
        "per_device_eval_batch_size": 16,
        "eval_steps": 500, 
        "prediction_loss_only": false,
        "eval_accumulation_steps": 5,
        "save_steps": 500
    }
}
